CONFIG_TARGET_bcm53xx=y
CONFIG_TARGET_bcm53xx_generic=y
CONFIG_TARGET_bcm53xx_generic_DEVICE_meraki_mr32=y

# Initramfs + SquashFS
CONFIG_TARGET_ROOTFS_INITRAMFS=y
CONFIG_TARGET_INITRAMFS_COMPRESSION_LZMA=y
CONFIG_TARGET_ROOTFS_SQUASHFS=y
CONFIG_TARGET_IMAGES_GZIP=n

# Минимальный набор пакетов
CONFIG_PACKAGE_dropbear=y
CONFIG_PACKAGE_uci=y
CONFIG_PACKAGE_busybox=y

# Сеть
CONFIG_PACKAGE_kmod-bcm53xx=y
CONFIG_PACKAGE_kmod-nf-nat=y
CONFIG_PACKAGE_kmod-ipt-nat=y
CONFIG_PACKAGE_kmod-nf-conntrack=y
CONFIG_PACKAGE_kmod-ipt-core=y
CONFIG_PACKAGE_kmod-nf-conntrack6=y
CONFIG_PACKAGE_kmod-ipv6=y

# Выключаем всё лишнее
CONFIG_PACKAGE_opkg=n
CONFIG_PACKAGE_luci=n
CONFIG_PACKAGE_wpad-basic-wolfssl=n
CONFIG_ALL_KMODS=n
CONFIG_ALL_NONSHARED=n
CONFIG_STRIP_KERNEL_EXPORTS=y
